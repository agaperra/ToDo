<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purpleMainLight</item>
        <item name="colorPrimaryVariant">@color/purpleMainLight</item>
        <item name="colorOnPrimary">@color/purpleMainLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purpleMainLight</item>
        <item name="colorSecondaryVariant">@color/purpleMainLight</item>
        <item name="colorOnSecondary">@color/purpleMainLight</item>
        <item name="android:windowBackground">@color/purpleMainLight</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToDo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToDo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>